    <input type="submit" value="Log In" class="btn btn-primary pull-right">
    <div class="clearfix"></div>
    </form>

    <form id="sign_up_user" action="/users" method="post">
    <h2>Sign Up</h2>
    <label>Email Address</label>
    <input id="text_input" type="text" class="span3" name="user[username]" placeholder="Username" required>
    <label>Password</label>
    <input id="text_input" type="password" class="span3" name="user[password]" placeholder="Password" required>
    <label><input type="checkbox" checked="yes" name="terms"> I agree with<a href="#" style="color: #780000"> Opertion PRISM</a>.</label>
    <input type="submit" value="Sign Up" class="btn btn-primary pull-right">
    <div class="clearfix"></div>
    </form>
